<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>

            <stroke
                    android:width="1dp"
                    android:color="#53933f" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#abcdff"
                    android:endColor="#032BFF"
                    android:angle="45" />
            <stroke
                    android:width="5dp"
                    android:color="@android:color/transparent" />
            <corners
                    android:radius="4dp" />
            <padding
                    android:left="10dp"
                    android:top="14dp"
                    android:right="10dp"
                    android:bottom="15dp" />
        </shape>
    </item>
</selector>
