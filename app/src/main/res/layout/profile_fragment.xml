<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/background_color"
    >



    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="127dp"
               android:layout_height="127dp"
               android:id="@+id/profile_photo"
               android:background="@android:color/transparent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               tools:layout_editor_absoluteY="34dp"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_pseudo"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="USER"
            app:layout_constraintStart_toStartOf="@+id/profile_photo"
            app:layout_constraintEnd_toEndOf="@+id/profile_photo"
            android:textColor="?attr/primary_text_color"
            app:layout_constraintTop_toBottomOf="@id/profile_photo"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_video"
            android:padding="10dp"
            android:drawableTint="?attr/icon_color"
            android:background="@null"
            android:text="@string/myvideos"
            android:textColor="?attr/primary_text_color"
            android:drawableLeft="@drawable/ic_ondemand_video_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_pseudo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_pseudo"
            tools:layout_editor_absoluteY="6dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:drawablePadding="10dp"
            />
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/param"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="?attr/primary_text_color"
            android:text ="@string/param"
            android:drawableTint="?attr/icon_color"
            android:background="@null"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_pseudo"
            app:layout_constraintTop_toBottomOf="@id/btn_fav"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteY="6dp"
           />


    <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="?attr/colorAccent"
            android:text="@string/myfav"
            android:drawableTint="?attr/icon_color"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="?attr/primary_text_color"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btn_fav"
            android:drawableStart="@drawable/ic_fav"
            android:background="@null"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_video"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_pseudo"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>
