<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/background_color"
    >



    <ImageView android:layout_width="127dp"
               android:layout_height="127dp"
               android:id="@+id/profile_photo"
               android:background="@android:color/transparent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               tools:layout_editor_absoluteY="34dp"


    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_pseudo"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="USER"
            app:layout_constraintStart_toStartOf="@+id/profile_photo"
            app:layout_constraintEnd_toEndOf="@+id/profile_photo"
            android:textColor="?attr/primary_text_color"
            app:layout_constraintTop_toBottomOf="@id/profile_photo"
    />
    <Button android:layout_width="41dp"
            android:layout_height="38dp"
            android:id="@+id/param"
            android:layout_margin="20dp"
            android:drawableTint="?attr/icon_color"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_pseudo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_pseudo"
            tools:layout_editor_absoluteY="6dp"
            android:layout_marginEnd="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>
